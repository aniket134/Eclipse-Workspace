#include <iostream>
#include <cstdlib>
#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <string>

using namespace std;

void *thread_function(void *arg);

int main(){
	pthread_t mythread;
	if(pthread_create(&mythread, NULL, thread_function, NULL)){
		cout<<"Error creating thread.\n";
		abort();
	}
	if(pthread_join(mythread, NULL)){
		cout<<"Error joining threads.\n";
		abort();
	}
	exit(0);
}

void *thread_function(void *arg){
	int i;
	for(i = 0; i < 20; i++){
		cout<<"here: "<<i;
		sleep(1);
	}
	return NULL;
}
